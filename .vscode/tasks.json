{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "msbuild",
			"args": [
				"/property:GenerateFullPaths=true",
				"/t:build",
				"/consoleloggerparameters:NoSummary"
			],
			"group": "build"
		},
		{
			"label": "dev",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "start-backend",
			"type": "shell",
			"command": "node",
			"args": ["server.js"],
			"isBackground": true,
			"group": "build"
		}
	]
}